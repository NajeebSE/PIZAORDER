@model SLE_System.Models.LoginViewModel
@{ ViewData["Title"] = "Login"; }


<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg" class="img-fluid" alt="Phone image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <form method="post">
                    <!-- Email input -->
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline mb-4">
                        <input asp-for="Email" type="email" id="form1Example13" class="form-control form-control-lg" />
                        <label asp-for="Email" class="form-label" for="form1Example13">Email address</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!-- Password input -->
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline mb-4">
                        <input asp-for="Password" type="Password" id="form1Example23" class="form-control form-control-lg" />
                        <label asp-for="Password" class="form-label" for="form1Example23">Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div class="custom-control custom-checkbox">
                            <input asp-for="RememberMe" type="checkbox" class="custom-control-input">
                            <label class="custom-control-label" asp-for="RememberMe">@Html.DisplayNameFor(m => m.RememberMe)</label>
                        </div>

                    </div>

                    <div class="d-flex justify-content-around align-items-center mb-4">
                        <!-- Checkbox -->
                        <div class="form-check">
                            <input class="form-check-input"
                                   type="checkbox"
                                   value=""
                                   id="form1Example3"
                                   checked />
                            <label class="form-check-label" for="form1Example3"> Remember me </label>
                        </div>
                        <a href="#!">Forgot password?</a>
                    </div>

                    <!-- Submit button -->
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Sign in</button>
                    <div class="divider d-flex align-items-center my-1">
                        <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
                    </div>
                    <a class="btn btn-primary btn-lg btn-block" style="background-color: #3b5998" href="#!" role="button">
                        <i class="fab fa-facebook-f me-2"></i>Continue with Facebook
                    </a>


                </form>
            </div>
        </div>
    </div>
</section>

